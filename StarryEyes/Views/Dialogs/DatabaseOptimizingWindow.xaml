<Window x:Class="StarryEyes.Views.Dialogs.DatabaseOptimizingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DatabaseOptimizingWindow"
        Width="300"
        Height="100"
        Background="#222222"
        IsEnabled="False"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None">
    <Border BorderBrush="White" BorderThickness="1">
        <TextBlock HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="14"
                   Foreground="White">
            <Run Text="OPTIMIZING KRILE DATABASE" />
            <LineBreak />
            <Run Text="PLEASE WAIT FOR A WHILE..." />
        </TextBlock>
    </Border>
</Window>
